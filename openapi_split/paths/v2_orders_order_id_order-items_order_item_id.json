        "$ref": "#/components/parameters/ItemId"
      },
      {
        "$ref": "#/components/parameters/OrderId"
      },
      {
        "$ref": "#/components/parameters/StoreId"
      }
    ],
    "responses": {
      "200": {
        "$ref": "#/components/responses/GetItemById"
      },
      "401": {
        "$ref": "#/components/responses/Unauthorized"
