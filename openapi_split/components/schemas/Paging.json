{
  "type": "object",
  "title": "Paging",
  "description": "Paging information",
  "required": [
    "total",
    "offset",
    "limit"
  ],
  "properties": {
    "total": {
      "type": "integer",
      "example": 100,
      "description": "Total number of items available"
    },
    "offset": {
      "type": "integer",
